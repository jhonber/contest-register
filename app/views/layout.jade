doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Contest Register
    if (!everyauth.loggedIn)
      p
        h3 Log on with:
          a(href='/auth/google', style='border: 0px; margin-right: 10px; margin-left: 10px;')
            img(style='border: 0px', src='/images/facebook.ico')

          a(href='/auth/facebook', style='border: 0px; margin-right: 10px')
            img(style='border: 0px', src='/images/google.ico')

          a(href='/auth/github', style='border: 0px; margin-right: 10px')
            img(style='border: 0px', src='/images/github.ico')
    else
      p
        a(href="/") Home
        |  |
        a(href="/user/account")   Account
        |  |
        a(href="/contests")   Contests
        |  |
        a(href="/user/logout")   Log Out

    if(message)
      - var typeAlert = 'alert-box ' +  ( (!type) ? 'success' : type)
      p(class= typeAlert ) #{message}

    block content
