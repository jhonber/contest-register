doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Contest Register
    if (!everyauth.loggedIn)
      p
        a( href = "/" )   Home
        |   |
        a( href = "/user/login" )   Log In
        |   |
        a( href = "/user/register")   Register
    else
      p
        a(href="/") Home
        |  |
        a(href="/user/account")   Account
        |  |
        a(href="/contests")   Contests
        |  |
        a(href="/user/logout")   Log Out

    if(message)
      - var typeAlert = 'alert-box ' +  ( (!type) ? 'success' : type)
      p(class= typeAlert ) #{message}

    block content
